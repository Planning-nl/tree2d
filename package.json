{
    "author": "Planning.nl, Bas van Meurs",
    "name": "tree2d",
    "version": "1.0.0-alpha.1",
    "license": "apache",
    "main": "dist/tree2d.js",
    "module": "index.js",
    "files": [
        "index.js",
        "src/**",
        "dist/**"
    ],
    "scripts": {
        "test": "echo \"please run tests in browser using tests/test.html\"",
        "build": "tsc",
        "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
        "formatTests": "prettier --write \"tests/**/*.ts\" \"tests/**/*.js\"",
        "lint": "tslint -p tsconfig.json",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format",
        "bundle": "node scripts/build.js"
    },
    "buildOptions": {
        "name": "tree2d",
        "formats": [
            "esm-bundler",
            "cjs",
            "global",
            "esm"
        ]
    },
    "types": "dist/tree2d.d.ts",
    "repository": {
        "type": "git",
        "url": "git@github.com:Planning-nl/tree2d.git"
    },
    "devDependencies": {
        "prettier": "^1.19.1",
        "chai": "^4.2.0",
        "mocha": "^6.2.1",
        "@microsoft/api-extractor": "^7.3.9",
        "@rollup/plugin-json": "^4.0.0",
        "@rollup/plugin-replace": "^2.2.1",
        "execa": "^2.0.4",
        "fs-extra": "^8.1.0",
        "rollup-plugin-typescript2": "^0.24.0",
        "tsd": "^0.11.0",
        "brotli": "^1.3.2",
        "chalk": "^2.4.2",
        "minimist": "^1.2.0",
        "rollup": "^1.30.1",
        "rollup-plugin-babel": "^4.3.3",
        "rollup-plugin-license": "^0.10.0",
        "rollup-plugin-terser": "^5.1.2",
        "sinon": "^7.5.0",
        "tslint": "^6.0.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.8.2"
    },
    "dependencies": {
        "require.js": "^1.0.0"
    },
    "type": "module"
}
